<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_surface"
        android:elevation="4dp"
        app:title="@string/puzzle_title"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- 模式切换按钮组 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_surface"
        android:padding="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拼图模式"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/mode_toggle_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:checkedButton="@id/btn_mode_grid">

            <Button
                android:id="@+id/btn_mode_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_grid"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_mode_stitch_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_stitch_h"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_mode_stitch_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_stitch_v"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <!-- 布局变体选择器 -->
    <ScrollView
        android:id="@+id/variants_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_surface"
        android:elevation="2dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/layout_variants"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_text_primary" />

                <Button
                    android:id="@+id/btn_custom_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义布局"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/variants_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

        </LinearLayout>
        
    </ScrollView>

    <!-- 拼图画布容器 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/canvas_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 提示文本 -->
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/hint_select_photos"
            android:textSize="16sp"
            android:textColor="@color/color_text_secondary"
            android:gravity="center" />

    </FrameLayout>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/color_surface"
        android:elevation="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_select_photos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_select_photos"
            android:drawableLeft="@drawable/ic_add_photo"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:drawableLeft="@drawable/ic_settings"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_save"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/Widget.Material3.Button.TonalButton" />

    </LinearLayout>

</LinearLayout>
