<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <!-- Top Navigation with Tabs -->
    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_surface"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/color_text_primary" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                app:tabTextColor="@color/color_text_secondary"
                app:tabSelectedTextColor="@color/color_text_primary"
                app:tabIndicatorColor="@color/color_text_primary">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_scan" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_generate" />
            </com.google.android.material.tabs.TabLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Scan Mode UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_scan_mode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_nav"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlay for scan frame -->
        <View
            android:id="@+id/scan_overlay"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/scan_frame_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_select_image"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:icon="@android:drawable/ic_menu_gallery"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scan_overlay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/qr_scan_hint"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scan_overlay" />

        <!-- Result Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/color_surface"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_scan_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="16sp"
                    tools:text="扫描结果：https://www.example.com" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_copy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/btn_copy_result" />

                    <Button
                        android:id="@+id/btn_scan_again"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/btn_scan_again"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textColor="@color/color_text_primary"
                        app:strokeColor="@color/color_text_primary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Generate Mode UI -->
    <ScrollView
        android:id="@+id/layout_generate_mode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/color_background"
        app:layout_constraintTop_toBottomOf="@id/top_nav"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_input_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/color_text_primary"
                app:hintTextColor="@color/color_text_primary"
                android:textColorHint="@color/color_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_qr_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_generate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/btn_generate"
                android:padding="12dp" />

            <!-- URL Smart Edit Section -->
            <Button
                android:id="@+id/btn_parse_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/btn_parse_url"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_url_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/color_surface"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_base_url"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_base_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_text_primary"
                    android:textSize="14sp"
                    android:inputType="textUri" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/label_params"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/container_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <Button
                    android:id="@+id/btn_add_param"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_add_param"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="?attr/colorPrimary" />

                <Button
                    android:id="@+id/btn_update_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/btn_update_url" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_qr_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_save_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:text="@string/btn_save_qr"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/color_text_primary"
                app:strokeColor="@color/color_text_primary"
                app:icon="@android:drawable/ic_menu_save"
                app:iconTint="@color/color_text_primary" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
